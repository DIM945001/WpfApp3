<Window x:Class="WpfApp3.client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="client" Height="600" Width="600" Closing="Window_Closed" ResizeMode="NoResize">
    <Grid>
        <ComboBox x:Name="clientlist" HorizontalAlignment="Left" Margin="34,34,0,0" FontSize="38" VerticalAlignment="Top" Width="534" Height="74"/>
        <Button x:Name="button"  Content="Сформировать отчет" FontSize="38" HorizontalAlignment="Left" Margin="34,491,0,0" VerticalAlignment="Top" Width="534" Height="69" Click="button_Click"/>
        <Button x:Name="button1" Content="Открыть образец договора" FontSize="38" HorizontalAlignment="Left" Margin="34,384,0,0" VerticalAlignment="Top" Width="534" Height="74" Click="button1_Click"/>
        <Button x:Name="button2" Content="Проверить оплату" FontSize="38" HorizontalAlignment="Left" Margin="34,273,0,0" VerticalAlignment="Top" Width="534" Height="76" Click="button2_Click"/>

    </Grid>
</Window>
