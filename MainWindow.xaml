<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Страховая медицинская компания (Авторизация)" ResizeMode="NoResize" Height="600" Width="700" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="64*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" FontSize="36" Content="Страховая медицинская компания" HorizontalAlignment="Center" VerticalAlignment="Center" Height="58" Margin="6,46,6.6,46.4" Width="581"/>
        <Label x:Name="label1" Content="Логин" FontSize="42" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Bottom" Margin="53,0,19,95.4" Height="59" Width="128"/>
        <Label x:Name="label2" Content="Пароль" HorizontalAlignment="Center" FontSize="38" Grid.Row="1" VerticalAlignment="Center" Margin="56,96.6,480.6,0.4" Height="67" Width="157" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox" Grid.Column="1" HorizontalAlignment="Left" Height="59" Margin="159,9.6,0,0" Grid.Row="1" FontSize="38" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="278"/>
        <PasswordBox x:Name="passwordBox" Grid.Column="1" HorizontalAlignment="Left" Margin="159,96.6,0,0" Grid.Row="1" VerticalAlignment="Top" Height="67" Width="278" FontSize="38"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="33,168.6,0,0" Grid.Row="2" VerticalAlignment="Top" Width="167" Height="53" FontSize="25">
            <ComboBoxItem Content="Клиент"/>
            <ComboBoxItem Content="Инспектор"/>
            <ComboBoxItem Content="Бухгалтер"/>
        </ComboBox>
        <Button x:Name="button" FontSize="38" Content="Войти" Grid.Column="1" HorizontalAlignment="Left" Margin="159,168.6,0,0" Grid.Row="2" VerticalAlignment="Top" Width="278" Height="53" Click="button_Click"/>
        <Label x:Name="label3" FontSize="38" Content="Капча" HorizontalAlignment="Left" Margin="56,31.6,0,0" Grid.Row="2" VerticalAlignment="Top" Height="54" Width="147" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textbox12" FontSize="38" Grid.Column="1" HorizontalAlignment="Left" Margin="159,31.6,0,0" Grid.Row="2" VerticalAlignment="Top" RenderTransformOrigin="-0.573,0.031" Height="54" Width="278"/>
        <Label x:Name="label4" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Margin="80,130.6,0,0" Grid.Row="2" VerticalAlignment="Top"/>
    </Grid>
</Window>
